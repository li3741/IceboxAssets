<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IceboxAssets.AddMyItemByHandPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <SearchBar></SearchBar>
                <StackLayout Orientation="Horizontal">
                    <!--搜索到的产品-->
                    <Button Text="产品"/>
                    <Button Text="加" WidthRequest="45" HeightRequest="45" Margin="10,0,10,0"></Button>
                </StackLayout>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <!--保鲜/冰冻/成员/焦耳量/饮料（按钮上有小数字提示？）-->
                <BoxView Color="Red" WidthRequest="45" HeightRequest="45" Margin="10,0,10,0"></BoxView>
                <BoxView Color="Green" WidthRequest="45" HeightRequest="45" Margin="10,0,10,0"></BoxView>
                <BoxView Color="Blue" WidthRequest="45" HeightRequest="45" Margin="10,0,10,0"></BoxView>
                <BoxView Color="Yellow" WidthRequest="45" HeightRequest="45" Margin="10,0,10,0"></BoxView>
                <Button Text="关" WidthRequest="45" HeightRequest="45" Margin="10,0,10,0" Clicked="Button_Clicked"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>